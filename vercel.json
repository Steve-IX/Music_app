{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "apps/web/dist",
  "framework": "vite",
  "installCommand": "npm run vercel-install",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18"
      }
    },
    {
      "src": "apps/web/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/dist/index.html"
    }
  ]
} 
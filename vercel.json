{
  "version": 2,
  "buildCommand": "npm install && cd apps/web && npm install && npm run build",
  "outputDirectory": "apps/web/dist",
  "framework": "vite",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18"
      }
    },
    {
      "src": "apps/web/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/dist/index.html"
    }
  ],
  "root": "apps/web"
} 